
@{
    ViewBag.Title = "Signin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container justify-content-center">
    <div class="row mt-5">
        <div class="col-lg-3 m-auto">
            <h2 class="text-center pt-2">Sign In</h2>
            <div class="alert alert-danger p-3 visually-hidden"></div>
            <form action="#" class="mt-3">
                <div class="input-group mb-2">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                    <input type="text" class="form-control" placeholder="Username" />
                </div>
                <div class="input-group mb-2" ">
                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    <input type="password" class="form-control" placeholder="Password" />
                </div>
                <div class="input-group mb-2">
                    <a class="link-success" href="#">Forgot you Password?</a>
                </div>
                <div class="d-grid mt-3">
                    <button class="btn btn-success">SignIn</button>
                    <p class="text-center text-muted mt-3">Don't have a free account yet? <a href="Signup">Singup Here</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/local/account.js"></script>
}
